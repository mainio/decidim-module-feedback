<% recipient = form.object %>
<div class="card feedback-recipient" id="<%= tabs_id %>-field">
  <div class="card-divider feedback-recipient-divider">
    <h2 class="card-title">
      <span><%= t(".recipient") %></span>

      <button class="button button__sm button__transparent-secondary remove-feedback-recipient button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <div class="grid-x">
      <div class="row column">
        <%= form.email_field :email, tabs_id: tabs_id, class: "recipient-email" %>
      </div>
    </div>

    <%= form.hidden_field :id %>
    <%= form.hidden_field :position, value: recipient.position || 0 %>
    <%= form.hidden_field :deleted %>
  </div>
</div>
