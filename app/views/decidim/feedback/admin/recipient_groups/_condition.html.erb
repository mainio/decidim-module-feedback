<% condition = form.object %>
<div class="card group-condition" id="<%= tabs_id %>-field">
  <div class="card-divider group-condition-divider">
    <h2 class="card-title">
      <span><%= t(".condition") %></span>

      <button class="button button__sm button__transparent-secondary remove-group-condition button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <div class="grid-x ml-2">
      <div class="cell small-2">
        <%= form.text_field :key, tabs_id: tabs_id, class: "condition-key" %>
      </div>
      <div class="cell small-2">
        <%= form.text_field :value, tabs_id: tabs_id, class: "condition-value" %>
      </div>
    </div>

    <%= form.hidden_field :id %>
    <%= form.hidden_field :position, value: condition.position || 0 %>
    <%= form.hidden_field :deleted %>
  </div>
</div>
